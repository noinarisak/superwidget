[flake8]
exclude =
    .git,
    .gitignore,
    *.pot,
    *.py[co],
    __pycache__,
    venv,
    .env

ignore =
    E121,
    E126,
    E127,
    E128,
    E203,
    E225,
    E226,
    E231,
    E241,
    E251,
    E261,
    E265,
    E302,
    E303,
    E305,
    E402,
    E501,
    E741,
    W291,
    W292,
    W293,
    W391,
    W503,
    W504,
    F403,
    B007,
    B950,

max-line-length = 200

per-file-ignores =
    # Allow F405, * imports in the following due to pre-existing implementation that would be challenging to unwind.
    # Allow E122, //TODO: Remove this once we have a proper way to handle the dynammic js block for SIW Idp.
    okta_widget/views.py:F405,E122
    okta_widget/urls.py:F405